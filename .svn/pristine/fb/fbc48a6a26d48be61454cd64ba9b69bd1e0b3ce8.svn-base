import Link from 'next/link'
import { useRouter } from 'next/router'
import React from 'react'

export default function Footer() {
    const router = useRouter()

    const MoveToScondView = () => {
        if (router.pathname !== "/") {
            router.push("/");
            setTimeout(() => {
                window.scroll({
                    top: 950,
                    left: 0,
                    behavior: 'smooth'
                });
            }, 200)
        } else {
            window.scroll({
                top: 950,
                left: 0,
                behavior: 'smooth'
            });
        }
    }

    const MoveToThirdView = () => {
        if (router.pathname !== "/") {
            router.push("/");
            setTimeout(() => {
                window.scroll({
                    top: 1950,
                    left: 0,
                    behavior: 'smooth'
                });
            }, 200)
        } else {
            window.scroll({
                top: 1950,
                left: 0,
                behavior: 'smooth'
            });
        }
    }

    return (
        <div className='flex bg-footer-gray h-20 w-full justify-between mb-auto'>
            <div className='flex bg-footer-gray h-20 flex-col' >
                <h1 className='ml-4 mt-3'>LOGO</h1>
                <h1 className='mt-auto text-xs font-Exo_2 mb-3 ml-4'>&copy; Official Alex Serban Portofolio, 2022,All rights reserved.</h1>
            </div>
            <div className='flex ml-20 flex-col self-center'>
                <button className='text-xs font-Exo_2 mt-2' onClick={MoveToScondView}>About Me</button>
                <button className='text-xs font-Exo_2 mt-2' onClick={MoveToThirdView}>My Projects</button>
                <button className='text-xs font-Exo_2 mt-2'>Contact Me</button>
            </div>
            <div className='flex w-80 justify-center'>

                <Link href={"https://www.instagram.com/s3rbvn/"}>
                    <a className='h-7 self-center mr-4 cursor-pointer'><img className='h-7' src="/assets/footer/instagram-logo.svg" /></a>
                </Link>

                <Link href={"https://www.fiverr.com/alexx_s"}>
                    <a className='h-7 self-center mr-4 cursor-pointer'><img className='h-7' src="/assets/footer/fiverr-logo.svg" /></a>
                </Link>

                <Link href={"https://github.com/AALXX"}>
                    <a className='h-7 self-center mr-4 cursor-pointer'><img className='h-7' src="/assets/footer/github-logo.svg" /></a>
                </Link>

            </div>
        </div>
    )
}
