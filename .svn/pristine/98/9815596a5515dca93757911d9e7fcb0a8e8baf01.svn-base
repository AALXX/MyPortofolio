import React, { useEffect, useState } from 'react'

interface CardProps {
  CardName: string,
  CardBody: Array<string>,
}

export default function Card(props: CardProps) {

  const [cardBodyTehnologies, setCardBodyTehnologies] = useState([]);

  useEffect(() => {
    setCardBodyTehnologies(props.CardBody)
  }, [])

  return (
    <div className='flex border-2 w-80 h-48 margin ml-32 flex-col'>
      <h1 className='text-white text-xs sm:text-2xl mt-2 self-center'>{props.CardName}</h1>
      <hr className='mt-3' />
      {cardBodyTehnologies.map((body, index) => (
        <h1 key={index} className='text-white text-xs sm:text-xl mt-1 self-center'>{body}</h1>

      ))}
    </div>
  )
}
