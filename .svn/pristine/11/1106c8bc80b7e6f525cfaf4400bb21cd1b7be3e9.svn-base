import React, { FC, useEffect, useState } from 'react'
import ProjectCard from './ProjectCard'

interface ProjectsProps {
  projects: any
}

const Projects: FC<ProjectsProps> = (props) => {

  return (
    <div className='flex flex-col h-laptop_view_1920 w-full'>
      <h1 className='text-white text-xs sm:text-4xl ml-10 mt-10'>My Work</h1>
      <hr className='w-52 mt-8' />
      <div className='flex flex-row justify-center'>
        {props.projects.map((project, index) => (
          <div key={index} className='flex flex-col self-center mt-28 ml-8 mr-8'>
            <ProjectCard
              projectName={project.projectName}
              githubLink={project.githubLink}
              description={project.description}
              projectLogo={project.projectLogo}
              lastupdate={project.lastupdate}
              languages={project.languages  }
            />
          </div>
        ))}
      </div>
    </div>
  )
}

export default Projects;
